@model IEnumerable<PL.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Users</h1>

    @if (this.User.IsInRole("1"))
    {
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
    }
    <table class="table thead-dark text-dark bg-light box-shadow mb-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Registration Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    Plane Models
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    <td>
                        @if (item.Role == 2)
                        {
                            <p>User</p>
                        }
                        else
                        {
                            <p>Admin</p>
                        }
                    </td>
                    <td>
                        @foreach (var pModel in item.PlaneModels)
                        {
                            <p>@pModel.Name</p>
                        }
                    </td>
                    <td>
                        <form class="btn-group">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-controller="User" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="User" asp-route-id="@item.Id">Delete</a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>