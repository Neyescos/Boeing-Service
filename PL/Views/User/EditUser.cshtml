@model PL.Models.EditUserViewModel

@{
    ViewData["Title"] = "EditUser";
}
<div class="row">
    <div class="col col-md-2 ml-md-5 box-shadow">
        <p class="h5 text-muted ml-md-5">Select your planes</p>
        <div class="form-check-input ml-md-5">
            <form method="post">
                <div>
                    @for (var i = 0; i < Model.SelectedIds.Count; ++i)
                    {
                        <br />
                        <input type="hidden" asp-for="@Model.SelectedIds[i].Value" />
                        <input asp-for="@Model.SelectedIds[i].Selected" />@Model.SelectedIds[i].Text
                    }
                </div>
                <div class="form-group btn-group mt-md-4">
                    <input type="submit" value="Apply" class="btn btn-primary justify-content-end" asp-action="Edit" asp-controller="User" />
                </div>
            </form>
        </div>
    </div>
    <div class="container ml-sm-1">
        <div class="box-shadow ">
            <h1 class="display-4 d-flex justify-content-center">Edit your account info</h1>
        </div>
        <div class="row box-shadow mt-md-1">
            <div class="col">

                <form asp-action="EditUser" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.User.Name" class="control-label"></label>
                        <input asp-for="@Model.User.Name" class="form-control" />
                        <input type="hidden" asp-for="@Model.User.Id" />
                        <input type="hidden" asp-for="@Model.User.PlaneModels" />
                        <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
                    </div>
                    <div>
                        <a asp-controller="User" asp-action="ChangePassword" class="btn btn-outline-danger" style="margin-top:5%;" asp-route-id="@Model.User.Id">Change Password</a>
                    </div>
                    <div class="form-group btn-group justify-content-end mt-md-5">
                        <input type="submit" value="Apply" class="btn btn-primary" asp-action="Edit" asp-controller="User" />
                        <a asp-controller="User" asp-action="Details" class="btn btn-outline-dark" asp-route-id="@Model.User.Id">Back to Details</a>
                    </div>
                </form>
            </div>
            <div class="col ">
                <img src="https://image.freepik.com/free-vector/survey-illustration-flat-mini-persons-concept-with-quality-test-satisfaction-report-feedback-from-customers-opinion-form-client-answers-understanding-with-professional-research-team_126608-308.jpg" />
            </div>
        </div>

    </div>
</div>