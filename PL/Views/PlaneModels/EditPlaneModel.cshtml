@model PL.Models.PlaneModelViewModel

@{
    ViewData["Title"] = "EditPlaneModel";
}
<div class="container">
    <h1>Edit Plane Model</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPlaneModel">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductionYear" class="control-label"></label>
                    <input asp-for="ProductionYear" class="form-control" />
                    <span asp-validation-for="ProductionYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group btn-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

